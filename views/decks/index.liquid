{% layout 'layout.liquid'%}
{% block content %}
<div class="container-sm">
    <h2 class="display-6">All Decks</h2>
    <div class="row">
    <ul class="list-group">
        {% for deck in decks %}
        <li class="list-group-item">
            <a href="/decks/{{ deck._id }}" class="btn btn-info">
                {{ deck.name }}
            </a>
        </li>
        {% endfor %}
    </ul>
    </div>
</div>
{% endblock %}